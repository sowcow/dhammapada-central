$mark-border: 3px
$mark-alpha: 0.5
$mark-whiteness: 50%


@mixin glass($color)
  $part: $mark-whiteness
  $alpha: $mark-alpha
  border-color: $color
  background-color: rgba(mix($color, white, $part),$alpha)


.hl
  $b: $mark-border
  border: solid
  &.left
    margin-left: -$b
    border-width: $b 0 $b $b
    border-radius: 1em 0 0 1em
  &.middle
    border-width: $b 0 $b 0
  &.right
    margin-right: -$b
    border-width: $b $b $b 0
    border-radius: 0 1em 1em 0
  &.both
    margin-left: -$b
    margin-right: -$b
    border-width: $b
    border-radius: 1em 1em 1em 1em

